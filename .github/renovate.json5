{
  extends: [
    'config:recommended',
  ],
  timezone: 'Europe/Bucharest',
  dependencyDashboard: true,
  dependencyDashboardTitle: 'ğŸ¤– Dependency Dashboard',
  prCreation: 'immediate',
  prHourlyLimit: 25,
  prConcurrentLimit: 10,
  automergeType: 'pr',
  automergeStrategy: 'merge-commit',
  rebaseWhen: 'auto',
  rebaseLabel: 'rebase',
  rangeStrategy: 'pin',
  semanticCommitType: 'chore',
  semanticCommitScope: 'deps',
  separateMajorMinor: true,
  separateMultipleMajor: true,
  enabledManagers: [
    'docker-compose',
    'github-actions',
    'pip_requirements',
    'dockerfile',
    'npm',
  ],
  schedule: [
    'at any time',
  ],
  assignAutomerge: true,
  assignees: [
    'gaodes',
  ],
  platformAutomerge: true,
  platformCommit: 'enabled',
  automerge: true,
  ignoreTests: true,
  commitBody: 'For more details, see {{sourceUrl}}',
  prBodyColumns: [
    'Package',
    'Type',
    'Update',
    'Change',
    'References',
  ],
  prBodyNotes: [
    '{{#if isMajor}}ğŸš¨ MAJOR UPDATE - Please review carefully ğŸš¨{{/if}}',
    'ğŸ”— Source: {{sourceUrl}}',
    'ğŸ“ Release Notes: {{#if releaseNotes}}{{{releaseNotes}}}{{else}}No release notes provided{{/if}}',
    '{{#if hasReleaseNotes}}ğŸ“‹ [Changelog]({{{releaseNotes}}}){{/if}}',
    '{{#if isMajor}}ğŸ”¥ Breaking changes may require manual intervention{{/if}}',
    '{{#if isMinor}}âœ¨ New features and improvements included{{/if}}',
    '{{#if isPatch}}ğŸ› ï¸ Bug fixes and minor improvements{{/if}}',
  ],
  ignorePaths: [
    '_unused/**',
  ],
  packageRules: [
    // GitHub Actions - Patch and Minor Updates
    {
      matchManagers: [
        'github-actions',
      ],
      matchUpdateTypes: [
        'patch',
        'minor',
      ],
      automerge: true,
      labels: [
        'github-actions',
        'automerge',
      ],
      commitMessagePrefix: 'âš™ï¸',
      commitMessageTopic: '{{depName}}',
      commitMessageExtra: '{{#if isPatch}}(patch){{else}}(minor){{/if}} to {{#if isMajor}}v{{{newMajor}}}{{else}}{{{newVersion}}}{{/if}}',
      assignees: [
        'gaodes',
      ],
    },
    // Docker Compose - Patch, Minor, and Digest Updates
    {
      matchManagers: [
        'docker-compose',
        'pip_requirements',
        'dockerfile',
        'npm',
      ],
      matchUpdateTypes: [
        'patch',
        'minor',
        'digest',
      ],
      automerge: true,
      automergeSchedule: [
        'before 5am on monday',
      ],
      labels: [
        'automerge',
        'daily',
      ],
      commitMessagePrefix: 'ğŸ“¦',
      commitMessageTopic: '{{depName}}',
      commitMessageExtra: '{{#if isPatch}}(patch){{else}}{{#if isMinor}}(minor){{else}}(major){{/if}}{{/if}}{{/if}} to {{#if isDigest}}{{{newDigestShort}}}{{else}}{{#if isMajor}}v{{{newMajor}}}{{else}}{{{newVersion}}}{{/if}}{{/if}}',
      assignees: [
        'gaodes',
      ],
    },
    // Major Updates - Manual Review Required
    {
      matchManagers: [
        'github-actions',
        'docker-compose',
        'pip_requirements',
        'dockerfile',
        'npm',
      ],
      matchUpdateTypes: [
        'major',
      ],
      automerge: false,
      reviewers: [
        'gaodes',
      ],
      labels: [
        'major',
        'breaking-change',
      ],
      commitMessagePrefix: 'ğŸ’¥',
      commitMessageTopic: '{{depName}}',
      commitMessageExtra: '(major) to v{{{newMajor}}}',
      assignees: [
        'gaodes',
      ],
    },
    // Essential Services - Weekly Updates
    {
      matchManagers: [
        'docker-compose',
        'pip_requirements',
        'dockerfile',
        'npm',
      ],
      matchPackageNames: [

