{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    ':dependencyDashboard',
    ':ignoreUnstable',
    ':separateMajorReleases',
    ':maintainLockFilesWeekly',
    'docker:enableMajor',
    ':semanticCommits',
    ':enableVulnerabilityAlertsWithLabel',
  ],
  assignees: [
    'gaodes',
  ],
  assignAutomerge: false,
  enabledManagers: [
    'docker-compose',
    'dockerfile',
    'github-actions',
    'custom.regex',
    'pip_requirements',
    'pip-compile',
    'poetry'
  ],
  customManagers: [
    {
      customType: 'regex',
      fileMatch: [
        '.*\\.xml$',
      ],
      matchStrings: [
        '\\<Repository\\>(?<depName>[^:]+):(?<currentValue>[^<]+)\\<\\/Repository\\>',
      ],
      datasourceTemplate: 'docker',
      versioningTemplate: 'docker',
    },
  ],
  timezone: 'Europe/Bucharest',
  dependencyDashboard: true,
  automergeType: 'pr',
  automergeStrategy: 'merge-commit',
  rebaseWhen: 'conflicted',
  rangeStrategy: 'pin',
  semanticCommitType: 'chore',
  semanticCommitScope: 'deps',
  separateMajorMinor: true,
  separateMultipleMajor: true,
  prConcurrentLimit: 0,
  prHourlyLimit: 25,
  commitBody: 'For more details, see {{sourceUrl}}',
  prBodyColumns: [
    'Package',
    'Type',
    'Update',
    'Change',
    'References',
  ],
  ignorePaths: [
    '_archive/**',
  ],
  packageRules: [
    {
      matchManagers: [
        'github-actions',
      ],
      labels: [
        'github-actions',
      ],
      commitMessagePrefix: '‚öôÔ∏è',
      commitMessageTopic: '{{depName}}',
      prBodyNotes: [
        'Action source: {{sourceUrl}}',
      ],
      schedule: [
        'at any time',
      ],
      automerge: true,
      automergeSchedule: [
        'at any time',
      ],
      ignoreTests: true,
      platformAutomerge: true,
      recreateWhen: 'always',
      prCreation: 'immediate',
    },
    {
      matchSourceUrlPrefixes: ["https://github.com"],
      matchUpdateTypes: ["patch", "minor", "major"],
      matchCategories: ["security"],
      prPriority: 5,
      labels: ['security'],
      automerge: true
    },
    {
      matchManagers: ['pip_requirements'],
      labels: ['python-deps'],
      rangeStrategy: 'pin',
      commitMessagePrefix: 'üì¶',
      prPriority: 3,
      stabilityDays: 3
    },
    {
      matchManagers: ['dockerfile', 'docker-compose'],
      labels: ['docker'],
      commitMessagePrefix: 'üê≥',
      prPriority: 4,
      stabilityDays: 3,
      updateTypes: ['minor', 'patch'],
      automerge: true
    },
    {
      matchManagers: ['dockerfile', 'docker-compose'],
      matchUpdateTypes: ['major'],
      labels: ['docker', 'major'],
      commitMessagePrefix: 'üê≥üí•',
      dependencyDashboardApproval: true
    },
    {
      matchManagers: [
        'github-actions',
      ],
      matchUpdateTypes: [
        'major',
      ],
      addLabels: [
        'major',
        'breaking-change',
      ],
      commitMessagePrefix: 'üí•',
      automerge: false,
      dependencyDashboardApproval: true,
    },
    {
      matchManagers: [
        'github-actions',
      ],
      matchUpdateTypes: [
        'minor',
      ],
      addLabels: [
        'github-actions',
        'minor',
      ],
    },
    {
      matchManagers: [
        'github-actions',
      ],
      matchUpdateTypes: [
        'patch',
      ],
      addLabels: [
        'github-actions',
        'patch',
      ],
    },
  ],
  vulnerabilityAlerts: {
    enabled: true,
    labels: [
      'security',
    ],
    automerge: true
  },
  schedule: ['after 10pm every weekday', 'before 5am every weekday', 'every weekend'],
  updateNotScheduled: false,
  pip_requirements: {
    fileMatch: ['(^|/)([\\w-]*)requirements.*\\.txt$']
  }
}
